<% 
const layout = 'layout';
const body = `
<h1>Blog Posts</h1>
<p class="lead">Latest articles and updates from OrchardLite CMS</p>
<div class="row">
    <div class="col-md-8">
        ${posts.length > 0 ? posts.map(post => `
            <article class="card mb-4">
                <div class="card-body">
                    <h2 class="card-title">
                        <a href="/content/${post.Slug}" class="text-decoration-none">${post.Title}</a>
                    </h2>
                    <p class="card-text">${post.Summary || ''}</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            By ${post.FirstName} ${post.LastName} on ${new Date(post.PublishedDate).toLocaleDateString()}
                        </small>
                        <div>
                            <span class="badge bg-secondary">${post.ContentType}</span>
                            <span class="badge bg-info">${post.ViewCount} views</span>
                        </div>
                    </div>
                </div>
            </article>
        `).join('') : '<div class="alert alert-info"><h4>No blog posts available</h4><p>Check back later for new content.</p></div>'}
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>About This Blog</h5>
            </div>
            <div class="card-body">
                <p>This blog demonstrates the content management capabilities of OrchardLite CMS, showcasing how blog posts are stored and retrieved from the MySQL database.</p>
            </div>
        </div>
        <div class="card mt-4">
            <div class="card-header">
                <h5>Workshop Topics</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><i class="fas fa-arrow-right text-primary"></i> AWS DMS Migration</li>
                    <li><i class="fas fa-arrow-right text-primary"></i> .NET Modernization</li>
                    <li><i class="fas fa-arrow-right text-primary"></i> Database Schema Design</li>
                    <li><i class="fas fa-arrow-right text-primary"></i> Cloud Architecture</li>
                </ul>
            </div>
        </div>
    </div>
</div>
`;
%>
<%- include('layout', { title, body }) %>