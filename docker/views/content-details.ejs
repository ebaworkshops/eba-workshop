<% 
const layout = 'layout';
const body = `
<article>
    <header class="mb-4">
        <h1>${content.Title}</h1>
        <div class="text-muted mb-3">
            <i class="fas fa-user"></i> By ${content.FirstName} ${content.LastName}
            <i class="fas fa-calendar ms-3"></i> ${new Date(content.PublishedDate).toLocaleDateString()}
            <i class="fas fa-eye ms-3"></i> ${content.ViewCount} views
            <span class="badge bg-secondary ms-3">${content.ContentType}</span>
        </div>
    </header>
    ${content.Summary ? `<div class="lead mb-4">${content.Summary}</div>` : ''}
    <div class="content-body">
        ${content.Body || '<p>Content body not available.</p>'}
    </div>
    <hr class="my-4">
    <div class="row">
        <div class="col-md-6">
            <small class="text-muted">
                <i class="fas fa-clock"></i> Created: ${new Date(content.CreatedDate).toLocaleDateString()}
            </small>
        </div>
        <div class="col-md-6 text-end">
            <small class="text-muted">
                <i class="fas fa-edit"></i> Modified: ${new Date(content.ModifiedDate).toLocaleDateString()}
            </small>
        </div>
    </div>
</article>
<div class="mt-5">
    <div class="card">
        <div class="card-header">
            <h5>Navigation</h5>
        </div>
        <div class="card-body">
            <a href="/" class="btn btn-outline-primary me-2">Home</a>
            <a href="/blog" class="btn btn-outline-secondary me-2">Blog</a>
            <a href="/admin" class="btn btn-outline-info">Admin Dashboard</a>
        </div>
    </div>
</div>
`;
%>
<%- include('layout', { title, body }) %>