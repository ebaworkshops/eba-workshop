<% 
const layout = 'layout';
const body = `
<div class="jumbotron mb-4">
    <div class="container">
        <h1 class="display-4">${siteName}</h1>
        <p class="lead">${siteDescription}</p>
        <p>This is a demonstration content management system built specifically for AWS migration workshops. It showcases a realistic web application with a complex database schema that is perfect for demonstrating AWS Database Migration Service (DMS) capabilities.</p>
        <a class="btn btn-light btn-lg" href="/about">Learn More</a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <h2>Recent Blog Posts</h2>
        ${recentPosts.length > 0 ? recentPosts.map(post => `
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="/content/${post.Slug}" class="text-decoration-none">${post.Title}</a>
                    </h5>
                    <p class="card-text">${post.Summary || ''}</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            By ${post.FirstName} ${post.LastName} on ${new Date(post.PublishedDate).toLocaleDateString()}
                        </small>
                        <div>
                            <span class="badge bg-secondary">${post.ContentType}</span>
                            <span class="badge bg-info">${post.ViewCount} views</span>
                        </div>
                    </div>
                </div>
            </div>
        `).join('') : '<div class="alert alert-info"><h4>No blog posts yet</h4><p>Check back later for new content, or visit the admin panel to create some posts.</p></div>'}
        
        <div class="text-center">
            <a href="/blog" class="btn btn-primary">View All Blog Posts</a>
        </div>
    </div>
    
    <div class="col-md-4">
        <h3>Site Pages</h3>
        ${pages.length > 0 ? `
            <div class="list-group">
                ${pages.map(page => `
                    <a href="/content/${page.Slug}" class="list-group-item list-group-item-action">${page.Title}</a>
                `).join('')}
            </div>
        ` : '<div class="alert alert-warning"><p>No pages available.</p></div>'}
        
        <div class="card mt-4">
            <div class="card-header">
                <h5>Workshop Features</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><i class="fas fa-check text-success"></i> User management with roles</li>
                    <li><i class="fas fa-check text-success"></i> Content management system</li>
                    <li><i class="fas fa-check text-success"></i> Media library</li>
                    <li><i class="fas fa-check text-success"></i> Admin dashboard</li>
                    <li><i class="fas fa-check text-success"></i> Audit logging</li>
                    <li><i class="fas fa-check text-success"></i> Database migration ready</li>
                </ul>
            </div>
        </div>
        
        <div class="card mt-4">
            <div class="card-header">
                <h5>Technology Stack</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><strong>.NET Framework:</strong> 4.8</li>
                    <li><strong>ASP.NET MVC:</strong> 5.2.7</li>
                    <li><strong>Entity Framework:</strong> 6.4.4</li>
                    <li><strong>Database:</strong> MySQL 8.0</li>
                    <li><strong>UI Framework:</strong> Bootstrap 5</li>
                </ul>
            </div>
        </div>
    </div>
</div>
`;
%>

<%- include('layout', { title, body }) %>