@model OrchardLite.Web.Models.AdminDashboardViewModel
@{
    ViewBag.Title = "Admin Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Admin Dashboard</h1>
    <div>
        <span class="badge badge-info">@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</span>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TotalUsers</h4>
                        <p class="mb-0">Total Users</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                @Html.ActionLink("Manage Users", "Users", "Admin", null, new { @class = "text-white" })
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TotalContent</h4>
                        <p class="mb-0">Content Items</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-file-alt fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                @Html.ActionLink("Manage Content", "Content", "Admin", null, new { @class = "text-white" })
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TotalMedia</h4>
                        <p class="mb-0">Media Files</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-images fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                @Html.ActionLink("Media Library", "Media", "Admin", null, new { @class = "text-white" })
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.PublishedContent</h4>
                        <p class="mb-0">Published</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <span class="text-white">@Model.DraftContent drafts</span>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Recent Content</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentContent != null && Model.RecentContent.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Type</th>
                                    <th>Author</th>
                                    <th>Status</th>
                                    <th>Modified</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var content in Model.RecentContent)
                                {
                                    <tr>
                                        <td>
                                            @Html.ActionLink(content.Title, "Details", "Content", new { id = content.Slug }, null)
                                        </td>
                                        <td>
                                            <span class="badge badge-secondary">@content.ContentType</span>
                                        </td>
                                        <td>@content.Author.FullName</td>
                                        <td>
                                            @if (content.Status == OrchardLite.Web.Models.ContentStatus.Published)
                                            {
                                                <span class="badge badge-success">@content.StatusDisplay</span>
                                            }
                                            else if (content.Status == OrchardLite.Web.Models.ContentStatus.Draft)
                                            {
                                                <span class="badge badge-warning">@content.StatusDisplay</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">@content.StatusDisplay</span>
                                            }
                                        </td>
                                        <td>@content.ModifiedDate.ToString("MM/dd/yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">No content available.</p>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Recent Activity</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentActivity != null && Model.RecentActivity.Any())
                {
                    @foreach (var activity in Model.RecentActivity.Take(10))
                    {
                        <div class="d-flex mb-2">
                            <div class="mr-2">
                                @if (activity.Action == "CREATE")
                                {
                                    <i class="fas fa-plus-circle text-success"></i>
                                }
                                else if (activity.Action == "UPDATE")
                                {
                                    <i class="fas fa-edit text-warning"></i>
                                }
                                else if (activity.Action == "DELETE")
                                {
                                    <i class="fas fa-trash text-danger"></i>
                                }
                                else if (activity.Action == "LOGIN")
                                {
                                    <i class="fas fa-sign-in-alt text-info"></i>
                                }
                                else
                                {
                                    <i class="fas fa-circle text-secondary"></i>
                                }
                            </div>
                            <div class="flex-grow-1">
                                <small>
                                    <strong>@(activity.User?.FullName ?? "System")</strong>
                                    @activity.Action.ToLower()
                                    @if (!string.IsNullOrEmpty(activity.EntityType))
                                    {
                                        <span>@activity.EntityType</span>
                                    }
                                    <br>
                                    <span class="text-muted">@activity.CreatedDate.ToString("MM/dd HH:mm")</span>
                                </small>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">No recent activity.</p>
                }
            </div>
            <div class="card-footer">
                @Html.ActionLink("View All Activity", "AuditLog", "Admin", null, new { @class = "btn btn-sm btn-outline-primary" })
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h5>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    @Html.ActionLink("Database Information", "DatabaseInfo", "Admin", null, new { @class = "btn btn-outline-primary btn-sm mb-2" })
                    @Html.ActionLink("System Settings", "Settings", "Admin", null, new { @class = "btn btn-outline-secondary btn-sm mb-2" })
                    @Html.ActionLink("View Site", "Index", "Home", null, new { @class = "btn btn-outline-success btn-sm" })
                </div>
            </div>
        </div>
    </div>
</div>