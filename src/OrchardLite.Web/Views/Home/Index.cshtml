@model OrchardLite.Web.Models.HomeViewModel
@{
    ViewBag.Title = "Home";
}

<div class="jumbotron bg-primary text-white">
    <div class="container">
        <h1 class="display-4">@Model.SiteName</h1>
        <p class="lead">@Model.SiteDescription</p>
        <p>This is a demonstration content management system built specifically for AWS migration workshops. It showcases a realistic web application with a complex database schema that is perfect for demonstrating AWS Database Migration Service (DMS) capabilities.</p>
        @Html.ActionLink("Learn More", "About", "Home", null, new { @class = "btn btn-light btn-lg" })
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>Recent Blog Posts</h2>
            @if (Model.RecentPosts != null && Model.RecentPosts.Any())
            {
                @foreach (var post in Model.RecentPosts)
                {
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">
                                @Html.ActionLink(post.Title, "Details", "Content", new { id = post.Slug }, new { @class = "text-decoration-none" })
                            </h5>
                            <p class="card-text">@post.Summary</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    By @post.Author.FullName on @post.PublishedDate?.ToString("MMMM dd, yyyy")
                                </small>
                                <div>
                                    <span class="badge badge-secondary">@post.ContentType</span>
                                    <span class="badge badge-info">@post.ViewCount views</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                
                <div class="text-center">
                    @Html.ActionLink("View All Blog Posts", "Blog", "Content", null, new { @class = "btn btn-primary" })
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <h4>No blog posts yet</h4>
                    <p>Check back later for new content, or visit the admin panel to create some posts.</p>
                </div>
            }
        </div>
        
        <div class="col-md-4">
            <h3>Site Pages</h3>
            @if (Model.Pages != null && Model.Pages.Any())
            {
                <div class="list-group">
                    @foreach (var page in Model.Pages)
                    {
                        @Html.ActionLink(page.Title, "Details", "Content", new { id = page.Slug }, new { @class = "list-group-item list-group-item-action" })
                    }
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <p>No pages available.</p>
                </div>
            }
            
            <div class="card mt-4">
                <div class="card-header">
                    <h5>Workshop Features</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success"></i> User management with roles</li>
                        <li><i class="fas fa-check text-success"></i> Content management system</li>
                        <li><i class="fas fa-check text-success"></i> Media library</li>
                        <li><i class="fas fa-check text-success"></i> Admin dashboard</li>
                        <li><i class="fas fa-check text-success"></i> Audit logging</li>
                        <li><i class="fas fa-check text-success"></i> Database migration ready</li>
                    </ul>
                </div>
            </div>
            
            <div class="card mt-4">
                <div class="card-header">
                    <h5>Technology Stack</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><strong>.NET Framework:</strong> 4.8</li>
                        <li><strong>ASP.NET MVC:</strong> 5.2.7</li>
                        <li><strong>Entity Framework:</strong> 6.4.4</li>
                        <li><strong>Database:</strong> MySQL 8.0</li>
                        <li><strong>UI Framework:</strong> Bootstrap 4</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>