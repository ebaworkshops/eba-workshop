@{
    ViewBag.Title = "Error";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="text-center">
            <h1 class="display-1 text-muted">Oops!</h1>
            <h2>Something went wrong</h2>
            <p class="lead">We're sorry, but an error occurred while processing your request.</p>
            
            <div class="alert alert-warning">
                <h4>What can you do?</h4>
                <ul class="list-unstyled mb-0">
                    <li>• Try refreshing the page</li>
                    <li>• Go back to the @Html.ActionLink("home page", "Index", "Home")</li>
                    <li>• Check the @Html.ActionLink("admin dashboard", "Index", "Admin") for system status</li>
                    <li>• Contact support if the problem persists</li>
                </ul>
            </div>
            
            <div class="mt-4">
                @Html.ActionLink("Go Home", "Index", "Home", null, new { @class = "btn btn-primary" })
                @Html.ActionLink("Admin Dashboard", "Index", "Admin", null, new { @class = "btn btn-secondary ml-2" })
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        // Auto-redirect to home page after 30 seconds
        setTimeout(function() {
            if (confirm('Would you like to be redirected to the home page?')) {
                window.location.href = '@Url.Action("Index", "Home")';
            }
        }, 30000);
    </script>
}